{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pack",
      "type": "shell",
      "command": [
        "mkdir -p mods;",
        "rm -r mods/${workspaceFolderBasename};",
        "mkdir mods/${workspaceFolderBasename};",
        "cp -r assets mods/${workspaceFolderBasename}/;",
        "cp -r modinfo.json mods/${workspaceFolderBasename}/modinfo.json"
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "build (Debug)",
      "dependsOn": "pack",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile",
      "type": "shell",
      "command": "dotnet",
      "linux": {
        "options": {
          "env": {
            "FrameworkPathOverride": "/lib/mono/4.6.1-api/"
          }
        }
      },
      "args": ["build", "-c", "Debug"]
    }
  ]
}
